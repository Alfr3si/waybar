{

"river/tags": {
  "num-tags": 9,
  "hide-vacant": true,
  "tag-labels": [
	"1",
	" ",
	"3",
	"4",
	"5",
	"6",
	" ",
	"8",
	"9"
  ]
},

// aqui los iconos
	"custom/cpu_icon": {
	  "format": " ",
	  "tooltip": false
	},
	"custom/updates_icon": {
	  "format": " ",
	  "tooltip": false
	},
	"custom/memory_icon": {
	  "format": " ",
	  "tooltip": false
	},
	"custom/pulseaudio_icon": {
	  "format": " ",
	  "tooltip": false,
          "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
	  "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%+",
	  "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%-"
	},
	"custom/temp_icon": {
	  "format": " ",
	  "tooltip": false
	},
// fin
  "group/updates" : {
    "orientation" : "vertical",
    "drawer" : false,
    "modules" : [
      "custom/updates_icon",
      "custom/updates"
    ]
  },
  "group/modules": {
    "orientation": "vertical",
    "drawer": false,
    "modules": [
      "custom/cpu_icon",
      "custom/cpu",
      "custom/memory_icon",
      "memory",
      "custom/temp_icon",
      "custom/temp",
      "custom/pulseaudio_icon",
      "pulseaudio",
      "custom/network",
      "tray"
    ]
  },
  "pulseaudio": {
    "tooltip": false,
    "format": "{volume}%",
    "format-bluetooth": " ",
    "format-muted": "Mut",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%-",
    "format-icons": {
      "headphones": "",
      "default": ""
    }
  },

  "memory": {
    "interval": 3,
    "format": "{}%"
  },

  "custom/network": {
    "on-click-right": "kitty -e nmtui",
    "interval" : 5,
    "exec" : "ping -c 1 -W 1 8.8.8.8 >/dev/null && echo '󰖩' || echo '󰖪'",
    "tooltip": false
  },

  "tray": {
    "icon-size": 25,
    "spacing": 10
  },

  "clock": {
    "format": "{:%I\n%M}",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 6,
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ff6699'><b>{}</b></span>",
        "weekdays": "<span color='#ebcb8b'><b>{}</b></span>",
        "days": "<span color='#9fe8ef'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },

    "battery": {
      "states": {
        "good": 95,
        "warning": 30,
        "critical": 15
      },

    "format": "{icon} {capacity}%",
    "interval": 2,
    "format-charging": " {capacity}%",
    "format-plugged": "{capacity}%  ",
    "format-icons": [" ", " ", " ", " ", " "]
  },

  "custom/cpu": {
    "exec": "~/.config/waybar/scripts/cpu",
    "interval": 2,
    "tooltip": false
  },

  "custom/temp": {
    "exec": "~/.config/waybar/scripts/cpuTemp",
    "interval" : 3,
    "critical-threshold": 80,
    "tooltip": false
   },
  "custom/updates": {
    "format": "{}",
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/pacman",
    "interval": 3600,
    "tooltip": true,
    "on-click-right": "~/.config/waybar/scripts/pacman"
  }
  }
}
